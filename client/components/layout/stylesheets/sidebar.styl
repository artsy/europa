.layout__sidebar__menu
  position relative

.layout__sidebar
  position fixed
  height 100%
  left 0
  top 0
  background-color #000
  width 110px
  padding 10px 0px
  color white
  text-align center
  font-size 1.17em

.layout__sidebar__header__title
  garamond()
  margin-bottom 30px

.layout__sidebar__header__img
  max-width 80%

.layout__sidebar__menu-item
  avant-garde()
  font-size 10px
  letter-spacing 0.1em
  display block
  margin 30px 0
  color white

@media only screen and (max-width : 600px)
  .layout__sidebar
    display none

