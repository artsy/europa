@import '../../stylus_lib'

// Base styles

*
  box-sizing border-box

a
  text-decoration none
  color black

input
  outline none

.avant-garde-button
  avant-garde()
  display inline-block
  position relative
  padding 7px 15px
  font-size 13px
  line-height 1
  cursor pointer
  border none
  background-color gray-color
  color white

.bordered-input
  garamond()
  border 2px solid gray-lighter-color
  border-radius 0
  box-shadow none
  font-size default-garamond-font-size
  background-color transparent

@import 'sidebar'
@import 'main'
